{
  "name": "unifi-electron-app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-patch": "npm version patch && npm run build",
    "build-minor": "npm version minor && npm run build",
    "build-major": "npm version major && npm run build"
  },
  "build": {
    "appId": "com.yourcompany.unifiapp",
    "productName": "UniFi Electron App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^23.6.0"
  }
}
